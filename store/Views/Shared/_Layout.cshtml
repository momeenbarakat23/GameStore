<!DOCTYPE html>
<html lang="en">
<head>
    <title>Lugx Store</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=New+Amsterdam&family=Roboto:wght@400;900&display=swap"
          rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - store</title>
    <link rel="stylesheet" href="~/css/style.css" />
    @RenderSection("style",required:false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/store.styles.css" asp-append-version="true" />
</head>
<body class="mycontaner">
    <div class="space-display color">
        <img src="~/Images/logo.png" class="logo2" />

        <div class="link buttons">
            <a asp-action="index" asp-controller="GameStore">Home</a>
            <a asp-action="">Contactus</a>
            <a asp-action="viewall" asp-controller="GameStore">Shop</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="signOut" asp-controller="Securty"> <input type="button" value="signOut" /></a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Register" asp-controller="Admins">RegisterAdmins</a>
                    <a asp-action="Role" asp-controller="Role">AddRoles</a>
                }
                
            }
            else
            {
                <a asp-action="LogIn" asp-controller="Securty"> <input type="button" value="LogIn" /></a>
            }
            
        </div>
    </div>
     @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
