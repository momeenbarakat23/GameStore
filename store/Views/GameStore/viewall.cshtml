@model IEnumerable<store.Models.GameStore>

@{
    ViewData["Title"] = "viewall";
}
@section style{
    <link rel="stylesheet" href="~/css/viewall.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@900&family=New+Amsterdam&family=Noto+Sans:wght@500&family=Roboto:wght@400;900&display=swap" rel="stylesheet">
}

<h1 class="card-title title noto-sans ">viewall</h1>
<div class="container2">
<p>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create"><button class="butCreate btn-success">Create New</button></a>
        }
    </p>
    <table class="table table-bordered noto-sans table-striped table-hover" style="font-size:x-large; text-align:center;">
        <thead class="table-dark" style="text-align:center;">
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Image</th>
            <th>Price</th>
            <th>Editers</th>

        </tr>
    </thead>
        <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                    <img src="~/Images/@item.Image" style="width:200px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                    @if (User.Identity.IsAuthenticated)
                    {<td>         
                  
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    }
                    else
                    {<td>
                     <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    </td>
                    }
                </tr>
}
    </tbody>
</table>
</div>
